<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="{x:Type TextBox}" TargetType="TextBox">
		<Setter Property="BorderBrush" Value="Gray"/>
		<Setter Property="Background" Value="#1f1f1f"/>
		<Setter Property="CaretBrush" Value="White"/>
		<Setter Property="Foreground" Value="White"/>

		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="TextBox">
					<Border CornerRadius="4" BorderThickness="1" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
						<TextBox Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
							CaretBrush="{TemplateBinding CaretBrush}"
							Foreground="{TemplateBinding Foreground}"
							Style="{x:Null}"
							Margin="3 0 0 0"
							Background="Transparent"
							BorderThickness="0"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	
</ResourceDictionary>