<UserControl x:Class="LF10_Project.MVVM.Views.TeacherListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LF10_Project.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0">
        <DataGrid ItemsSource="{Binding GradeEntry}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Note" Binding="{Binding GradeValue}"></DataGridTextColumn>
                <DataGridTextColumn Header="Fach" Binding="{Binding Subject}"></DataGridTextColumn>
                <DataGridTextColumn Header="Lehrer" Binding="{Binding MailAdress}"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
