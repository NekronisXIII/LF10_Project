<UserControl x:Class="LF10_Project.MVVM.Views.TeacherListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LF10_Project.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0">
        <DataGrid CanUserSortColumns="False" HeadersVisibility="Column" 
					  VirtualizingStackPanel.IsVirtualizing="False" VerticalGridLinesBrush="#A0A0A0"  
					  HorizontalGridLinesBrush="#A0A0A0" CanUserResizeRows="False" ItemsSource="{Binding Teacher}" AutoGenerateColumns="False"
                    CanUserReorderColumns="False" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vorname" IsReadOnly="true" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Nachname" IsReadOnly="true" Binding="{Binding LastName}"/>
                <DataGridTextColumn Width="*" Header="E-Mail" IsReadOnly="true" Binding="{Binding MailAdress}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
