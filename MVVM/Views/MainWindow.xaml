<Window x:Class="LF10_Project.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LF10_Project.MVVM.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800"
        Closing="OnClosing">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ToolBar>
            <Button Content="Options" Command="{Binding OpenOptionsCommand}"/>
        </ToolBar>
        <Grid Height="30" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="{Binding Username}" HorizontalAlignment="Right"></Label>
            <Image Grid.Column="1" Source="{StaticResource AccountImage}" HorizontalAlignment="Right"></Image>
        </Grid>

        <TabControl Grid.Row="1">
            <TabItem Header="Noten">
                <local:GradesUserControl></local:GradesUserControl>
            </TabItem>
            <TabItem Header="Lehrer">
                <local:TeacherListUserControl></local:TeacherListUserControl>
            </TabItem>
            <TabItem Header="Stundenplan">
                <local:ScheduleUserControl/>
            </TabItem>
            <TabItem Header="Einschulung">
                <local:EnrollmentUserControl></local:EnrollmentUserControl>
            </TabItem>
        </TabControl>

        <Button Grid.RowSpan="2" Command="{Binding CloseOptionsCommand}" Style="{StaticResource OptionsShadowButtonStyle}"/>

        <Border Grid.RowSpan="2" Margin="-100 0 0 0" Style="{StaticResource OptionsBorderStyle}" HorizontalAlignment="Left" Width="100" Background="Orange">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>

                <ComboBox 
            Grid.Row="0"
            ItemsSource="{Binding TypeOfSchool}"
            Height="50"
            Text="Schulart"
            IsEditable="true"
            IsReadOnly="true"/>


                <ComboBox 
            Grid.Row="1"
            ItemsSource="{Binding TypeOfSchool}"
            Height="50"
            Text="Ausbildungslinie"
            IsEditable="true"
            IsReadOnly="true"/>

                <Button 
                   Grid.Row="2" Content="Auswählen"></Button>
            </Grid>
        </Border>
    </Grid>
</Window>
