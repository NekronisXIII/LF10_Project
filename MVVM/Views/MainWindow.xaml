<Window x:Class="LF10_Project.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LF10_Project.MVVM.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ToolBar>
            <Button Content="Options" Command="{Binding OpenOptionsCommand}"/>
        </ToolBar>

        <TabControl Grid.Row="1">
            <TabItem Header="1"/>
            <TabItem Header="1"/>
            <TabItem Header="1"/>
        </TabControl>

        <Button Grid.RowSpan="2" Command="{Binding CloseOptionsCommand}" Style="{StaticResource OptionsShadowButtonStyle}"/>

        <Border Grid.RowSpan="2" Style="{StaticResource OptionsBorderStyle}" Margin="-100 0 0 0" HorizontalAlignment="Left" Width="100" Background="Orange">

        </Border>
    </Grid>
</Window>
